	},
	"item": [
		{
			"name": "Change password",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code matches expected\", function () {\r",
							"    pm.expect(pm.response.code).to.equal(parseInt(pm.variables.get(\"expected_status\")));\r",
							"});\r",
							"\r",
							"pm.test(\"Response indicates success for valid password change\", function () {\r",
							"    if (pm.variables.get(\"expected_status\") === \"200\") {\r",
							"        var jsonData = pm.response.json();\r",
							"        pm.expect(jsonData.success).to.be.true;\r",
							"    }\r",
							"});\r",
							"\r",
							"pm.test(\"Unauthorized with wrong password returns 401\", function () {\r",
							"    if (pm.variables.get(\"expected_status\") === \"401\") {\r",
							"        pm.expect(pm.response.json().message).to.equal(\"Unauthorized\");\r",
							"    }\r",
							"});\r",
							"\r",
							"pm.test(\"Password mismatch returns 422\", function () {\r",
							"    if (pm.variables.get(\"expected_status\") === \"422\") {\r",
							"        pm.response.to.have.status(422);\r",
							"    }\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{auth_token}}",
							"type": "string"
						}
					]
				},
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"current_password\": \"{{current_password}}\",\r\n    \"new_password\": \"{{new_password}}\",\r\n    \"new_password_confirmation\": \"{{new_password_confirmation}}\"\r\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/users/change-password",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"users",
						"change-password"
					]
				}
			},
			"response": []
		}
	]
}